@using TH_Lab01.Models
@model IEnumerable<Student>

<h2>Danh sách Sinh viên</h2>

<p>
    <a asp-controller="Student" 
       asp-action="Create" 
       asp-route-area="admin" 
       class="btn btn-primary">Create Student</a> 
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Hệ ĐT</th>
            <th>Địa chỉ</th>
            <th>Ảnh</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.DateOfBorth.ToShortDateString()</td>
                @{
                    string str = "";
                    switch (s.Branch) 
                    {
                        case Branch.IT:
                            str = "CNTT";
                            break;
                        case Branch.BE:
                            str = "Kinh tế";
                            break;
                        case Branch.CE:
                            str = "Công trình";
                            break;
                        case Branch.EE:
                            str = "Điện - Điện tử";
                            break;
                    }
                }
                <td>@str</td>
                <td>@(s.Gender == Gender.Male ? "Nam" : "Nữ")</td>
                <td>@(s.IsRegular ? "Chính quy" : "Phi chính quy")</td>
                <td>@s.Address</td>
                <td>
                    @if (!string.IsNullOrEmpty(s.ImagePath))
                    {
                        <img src="@s.ImagePath" alt="Ảnh sinh viên" style="width: 50px; height: 50px; object-fit: cover;">
                    }
                    else
                    {
                        <span>(No Image)</span>
                    }
                </td>
                <td>@s.Email</td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        var table = document.querySelector("table");
        table.onclick = function onTableClick() {
            table.style = "background-color: yellow;"
        }
    </script>
}